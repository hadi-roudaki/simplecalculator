@{
    ViewData["Title"] = "Home Page";
}
@model CalculationModel

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <label>First Value</label>
            @Html.TextBoxFor(x => x.FirstValue, new { @class = "form-control", type = "number" })
        </div>

        <div class="row">
            <label>Second Value</label>
            @Html.TextBoxFor(x => x.SecondValue, new { @class = "form-control", type = "number" })
        </div>
        <div class="row">
            <label>Action:</label>
            <input type="submit" value="x" class="btn btn-warning btn-lg" name="action" />
            <input type="submit" value="÷" class="btn btn-warning btn-lg" name="action" />
            <input type="submit" value="-" class="btn btn-warning btn-lg" name="action" />
            <input type="submit" value="+" class="btn btn-warning btn-lg" name="action" />
            <input type="submit" value="%" class="btn btn-warning btn-lg" name="action" />
        </div>
        <div class="row">
            <label>Result</label>
            <input type="text" class="form-control" placeholder="0" value="@(ViewBag.Result ?? String.Empty)" readonly>
        </div>
    </div>
}
